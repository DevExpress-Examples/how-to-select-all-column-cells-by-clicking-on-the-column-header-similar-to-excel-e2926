<Window x:Class="B183292SelectingColumnsByClickOnHeader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:local="clr-namespace:B183292SelectingColumnsByClickOnHeader"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxg:GridControl AutoPopulateColumns="True" ItemsSource="{Binding}">
            <dxg:GridControl.View>
                <local:MyTableView MultiSelectMode="Cell"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</Window>
